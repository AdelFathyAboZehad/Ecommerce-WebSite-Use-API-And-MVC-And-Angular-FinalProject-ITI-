@model AdminSiteUseMVC.ViewModel.Brands.BrandViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Details";
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");

}
@if (!isRTL)
{
    <h4 style="color:#232F3E;font-style:italic;font-weight:bold;"><i class="fa-solid fa-magnifying-glass mx-2 " style=" font-size:smaller"></i>@localizer["Details Of"] @Model.NameEN </h4>
}
else
{
    <h4 style="color:#232F3E;font-weight:bold;"><i class="fa-solid fa-magnifying-glass mx-2 " style=" font-size:smaller"></i>@localizer["Details Of"] @Model.NameAR </h4>

}

<div class="row justify-content-center ">

    <div class="card col-lg-6 col-md-9 col-sm-12 " style="box-shadow: 0px 5px 10px rgba(0, 0, 0, .5);background-color:#232F3E;">
        <img src="@Model.ImageURL" class="card-img-top" alt="..." style="width:100%;height:350px" >
        <div class="card-body">
            @if (!isRTL)
            {
                <h1 style="color:#FF9900" class="card-title">@Model.NameEN</h1>

                  }
            else
            {
                <h1 style="color:#FF9900" class="card-title">@Model.NameAR</h1>

            }



        </div>
    </div>


</div>
