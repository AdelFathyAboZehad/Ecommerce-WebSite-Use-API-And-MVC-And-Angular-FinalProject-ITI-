@model AdminSiteUseMVC.ViewModel.Products.EditProductViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Edite";
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");

}
